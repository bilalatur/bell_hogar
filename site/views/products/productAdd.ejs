<%- include('../partials/head') %>
<body class="container">
 <%- include('../partials/header') %>
 <%if (typeof(status) != "undefined"){
  if(status == "success"){ %>
      <div class="alert alert-success" role="alert">
          <%=mensaje%>
      </div>
  <% }
  }%>

<% if (typeof errors != 'undefined') { %>
  <div class="alert alert-danger" role="alert">
      <ul>
          <% for( let i = 0; i < errors.length; i++ ) { %>
              <li>
                  <%= errors[i].msg %>
              </li>
          <% } %>
      </ul>
  </div>
<% } %>

        <!-- //Inicio Formulario de Registro de productos-->
        <div class ="container body-form">
            <div class="form-header" >
                 <h1 class="form-title titulo-f" > <i class="fa fa-user"></i> Carga de Nuevos Productos</h1></br>
            </div>
            <form class="productAdd" method="POST" action="/products/create" enctype="multipart/form-data" >
                      <label class="col-12 col-md-10" for = "nombre"><h6>Nombre del Producto:</h6>
                        <input name="nombre" id="nombre" type="text" class="form-control" >
                        <p class="pNombre validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "descripcion"><h6>Descripción:</h6>
                        <input name="descripcion" id= "descripcion" type="text" class="form-control" >
                        <p class="pDescripcion validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "categoria"><h6>Categoría:</h6>
                        <input name="categoria" id= "categoria" type="text" class="form-control" >
                        <p class="pCategoria validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "subcategoria"><h6>Subcategoría:</h6>
                        <input name="subcategoria" id= "subcategoria" type="text" class="form-control" >
                        <p class="pSubcategoria validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "marca"><h6>Marca:</h6>
                        <input name="marca" id= "marca" type="text" class="form-control" >
                        <p class="pMarca validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "precio"><h6>Precio:</h6>
                        <input name="precio" id="precio" type="number" class="form-control" >
                        <p class="pPrecio validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "images"><h6>Cargar 3 Imágenes del Producto:</h6>
                        <input class="col-12 col-md-10" name="images" id="images" type="file" accept=".jpg, .jpeg, .png" multiple> <br>
                        <p class="pImages validator"></p>
                      </label></br>

                      <label class="col-12 col-md-10" for = "stock"><h6>Stock:</h6>
                        <input name="stock" id="stock" type="number" class="form-control" >
                        <p class="pStock validator"></p>
                      </label></br>

                      <div class="btnProduct">
                        <button class="suscription-btn btn-color col-12 col-md-3"  type="submit">Guardar Registro</button><br>
                        <button class="suscription-btn btn-color col-12 col-md-3" id="borrarEdicion" type="reset">Borrar Registro</button>
                      </div>
         </form>
     </div>
     <script  src="/javascript/productsAdd.js"></script>
      <%- include('../partials/footer') %>
    </body>
</html>